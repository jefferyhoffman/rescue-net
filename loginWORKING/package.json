{
  "name": "rescue_net_login",
  "version": "2.0.0",
  "description": "rescue-net",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "install": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm",
    "install:server": "cd server && npm",
    "build": "cd client && npm build",
    "start:dev": "concurrently -n client,server \"npm run client:dev\" \"npm run server:dev\"",
    "client:dev": "cd client && npm start",
    "server:dev": "nodemon server/server.js",
    "heroku-postbuild": "npm build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-ejs-layouts": "^2.5.0",
    "express-session": "^1.15.6",
    "mongoose": "^5.4.1",
    "node": "^11.11.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  }
}
